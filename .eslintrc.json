{
  "env": {
    "browser": true,
    "es2021": true,
    "jest/globals": true,
    "amd": true,
    "node": true
  },
  "extends": ["eslint:recommended", "plugin:@typescript-eslint/recommended"],
  "overrides": [],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest"
  },
  "plugins": ["@typescript-eslint", "jest"],
  "rules": {
    "no-undef": "error",
    "@typescript-eslint/no-var-requires": "warn",
    "no-var": "warn",
    "@typescript-eslint/no-namespace": false
  }
}
